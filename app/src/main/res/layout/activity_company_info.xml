<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.CompanyInfoActivity">

    <TextView
        android:id="@+id/tv_coInfo"
        style="@android:style/TextAppearance.DeviceDefault.Medium"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="@string/company_information"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@color/colorPrimary">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:background="@drawable/white_top_curve_back">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edittext_light_green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_coName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="100dp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:gravity="center"
                            android:layout_gravity="center|left|top"
                            android:text="@string/company_name"
                            android:background="@color/white"/>
                        <EditText
                            android:id="@+id/etCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"
                            android:inputType="text"
                            android:gravity="center|left|top"
                            android:textSize="13sp"
                            android:maxLength="100"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:imeOptions="actionNext"
                            android:lineSpacingExtra="5dp"
                            android:layout_margin="15dp"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edittext_light_green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/tv_coAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="100dp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:gravity="center"
                            android:layout_gravity="center|left|top"
                            android:text="@string/company_address"
                            android:background="@color/white"/>
                        <EditText
                            android:id="@+id/etCompanyAddress"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"
                            android:inputType="text"
                            android:gravity="center|left|top"
                            android:textSize="13sp"
                            android:maxLength="100"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:imeOptions="actionDone"
                            android:lineSpacingExtra="5dp"
                            android:layout_margin="15dp"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/edittext_light_green"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="100dp"
                            android:textStyle="bold"
                            android:textColor="@color/green"
                            android:textSize="20sp"
                            android:paddingRight="5dp"
                            android:paddingLeft="5dp"
                            android:gravity="center"
                            android:layout_gravity="center|left|top"
                            android:text="Post Url"
                            android:background="@color/white"/>
                        <EditText
                            android:id="@+id/et_postUrl"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/transParent"
                            android:inputType="text"
                            android:gravity="center|left|top"
                            android:textSize="13sp"
                            android:maxLength="100"
                            android:padding="5dp"
                            android:scrollbars="vertical"
                            android:imeOptions="actionDone"
                            android:lineSpacingExtra="5dp"
                            android:layout_margin="15dp"/>
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.1"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75" />

                <CheckBox
                    android:id="@+id/cbCompanyLogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:text="@string/add_company_logo"
                    android:clickable="false"/>

                <!--<ImageView-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:layout_weight="0.25"/>-->

                <ImageView
                    android:id="@+id/ivAddCompanyLogo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@drawable/edittext_light_green"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/attach1" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tvCompanySave"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="22"
                    android:background="@drawable/button_green"
                    android:gravity="center"
                    android:text="@string/save"
                    android:shadowColor="@color/green2"
                    android:shadowDy="0"
                    android:shadowDx="0"
                    android:shadowRadius="2"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.1" />
        </LinearLayout>



    </LinearLayout>


</LinearLayout>
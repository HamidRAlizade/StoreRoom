<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activity.ExitSheetPackageActivity">



    <LinearLayout
        android:id="@+id/viewLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_description"
            style="@android:style/TextAppearance.DeviceDefault.Medium"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:text="@string/description"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="vertical"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_top_curve_back">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_green"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_entranceProcess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="100dp"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center|left"
                                android:text="@string/entrance_process"
                                android:background="@color/white"/>
                            <EditText
                                android:id="@+id/et_entranceDescription"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:background="@color/transParent"
                                android:inputType="text"
                                android:gravity="center|left"
                                android:textSize="10sp"
                                android:maxLength="300"
                                android:scrollbars="vertical"
                                android:imeOptions="actionNext"
                                android:lineSpacingExtra="5dp"
                                android:layout_margin="15dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_green"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_outgoingProcess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="100dp"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center|left"
                                android:text="@string/outgoing_process"
                                android:background="@color/white"/>
                            <EditText
                                android:id="@+id/et_outgoingDescription"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:background="@color/transParent"
                                android:inputType="text"
                                android:gravity="center|left"
                                android:textSize="10sp"
                                android:maxLength="300"
                                android:scrollbars="vertical"
                                android:imeOptions="actionNext"
                                android:lineSpacingExtra="5dp"
                                android:layout_margin="15dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_green"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_countingProcess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="100dp"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center|left"
                                android:text="@string/counting_process"
                                android:background="@color/white"/>
                            <EditText
                                android:id="@+id/et_countingDescription"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="3"
                                android:background="@color/transParent"
                                android:inputType="text"
                                android:gravity="center|left"
                                android:textSize="10sp"
                                android:maxLength="300"
                                android:scrollbars="vertical"
                                android:imeOptions="actionNext"
                                android:lineSpacingExtra="5dp"
                                android:layout_margin="15dp"/>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1.3"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/edittext_green"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/tv_ReturnProcess"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="100dp"
                                android:textStyle="bold"
                                android:textColor="@color/green"
                                android:textSize="16sp"
                                android:paddingRight="5dp"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center|left"
                                android:text="@string/return_process"
                                android:background="@color/white"/>

                            <EditText
                                android:id="@+id/et_returnDescription"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_margin="15dp"
                                android:layout_weight="3"
                                android:background="@color/transParent"
                                android:gravity="center|left"
                                android:imeOptions="actionDone"
                                android:inputType="text"
                                android:lineSpacingExtra="5dp"
                                android:maxLength="300"
                                android:scrollbars="vertical"
                                android:textSize="10sp" />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:id="@+id/tv_save"
                    style="@android:style/TextAppearance.DeviceDefault.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.65"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_black"
                    android:text="@string/save"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"/>



            </LinearLayout>





        </LinearLayout>

    </LinearLayout>


</RelativeLayout>